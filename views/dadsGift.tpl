        }
      }


      .inner {
        display:inline-block;
        border-radius: 10px;
        -moz-border-radius: 10px;
        -webkit-border-radius: 10px;
        padding: 20px;
        margin: 10px;
        width: 80px;
        height: 80px;
        color: black;
        background: rgba(255, 255, 255, 1);
      }
      .inner .smalltext {
        font-size: 20px;
      }
